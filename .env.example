# Hakilix Enterprise Advanced (demo)
# Copy this file to .env and adjust as needed.

# Runtime
HAKILIX_ENV=dev
HAKILIX_JWT_SECRET=change-me-in-prod

# Postgres (superuser used only for init)
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hakilix
POSTGRES_PORT=55432

# Ports
REDIS_PORT=6379
API_PORT=8080
DASHBOARD_PORT=8501

# App DB URLs (internal Docker network uses "timescaledb" hostname)
DATABASE_URL_APP=postgresql+psycopg://hakilix_app:hakilix@timescaledb:5432/hakilix
DATABASE_URL_MIGRATOR=postgresql+psycopg://hakilix_migrator:hakilix@timescaledb:5432/hakilix

# Redis
REDIS_URL=redis://redis:6379/0

# Demo tenant + admin
DEMO_AGENCY_ID=A-001
DEMO_AGENCY_NAME=Hakilix Demo Agency
DEMO_ADMIN_EMAIL=admin@hakilix.local
DEMO_ADMIN_PASSWORD=Admin!234
DEMO_RESIDENT_IDS=R-001,R-002,R-003

# Broker (direct|pubsub)
BROKER_TYPE=direct
PUBSUB_TOPIC=

# OIDC (optional)
OIDC_ENABLED=false
OIDC_ISSUER=
OIDC_AUDIENCE=hakilix-api
OIDC_JWKS_URL=

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
